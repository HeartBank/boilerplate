<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Transactions</title>
		<meta charset="utf-8">
		<style>
      input, textarea {
        display:block;
      }
		</style>
	</head>
	<body>
		<main>
      <a href="/">Home</a>
      <section>
        <h2>Post Transaction</h2>

      </section>
      <section>
        <h2>Post Message</h2>
        <form method="POST" action="/transactions/message" enctype = "multipart/form-data">
	        <textarea placeholder="Transaction Message" name="message"></textarea>
          <input type="file" name="media" size="1" />
	        <input type="submit" value="Submit">
	      </form>
      </section>
      <section>
        <h2>Customer Transactions</h2>
        <% customer.forEach(transaction => { %>
          <ul>
            <li>Role: <%= customer.role %></li>
            <li>Username: <%= customer.username %></li>
            <li>Balance: <%= customer.balance %></li>
            <li>Status: <%= customer.status %></li>
          </ul>
        <% }) %>
      </section>
      <section>
        <h2>Branch Transactions</h2>
        <% branch.forEach(transaction => { %>
          <ul>
            <li>Role: <%= customer.role %></li>
            <li>Username: <%= customer.username %></li>
            <li>Balance: <%= customer.balance %></li>
            <li>Status: <%= customer.status %></li>
          </ul>
        <% }) %>
      </section>
		</main>
		<script>

    </script>
	</body>
</html>
